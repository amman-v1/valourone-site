---
import { Menu } from 'lucide-static';
const links = [
  { href: '/', label: 'Home' },
  { href: '/services', label: 'Services' },
  { href: '/about', label: 'About' },
  { href: '/resources', label: 'Resources' },
  { href: '/contact', label: 'Contact' }
];
---
<header class="sticky top-0 z-50 bg-white/80 backdrop-blur border-b border-ink-100">
  <nav class="mx-auto max-w-6xl px-4 py-3 flex items-center justify-between">
    <a href="/" class="font-semibold tracking-tight text-ink-900">Valour<span class="text-valour-500">One</span></a>
    <ul class="hidden md:flex gap-6 text-sm">
      {links.map(l => <li><a class="hover:text-valour-500" href={l.href}>{l.label}</a></li>)}
    </ul>
    <a href="/contact" class="hidden md:inline-block px-3 py-2 rounded-xl bg-valour-500 text-white shadow-soft">Book a call</a>
    <button class="md:hidden p-2" aria-label="Open menu"><Menu size={22} /></button>
  </nav>
</header>
